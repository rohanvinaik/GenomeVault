# Ruff configuration for GenomeVault
# Compatible with both older and newer Ruff versions

[lint]
extend-ignore = ["E501"]            # long lines fine
# Ruff will ONLY lint real source files; skip scripts, tests, notebooks
exclude = [
  "scripts/*",
  "test_*.py",
  "tests/*",
  "tools/*",
]

[lint.per-file-ignores]
"tools/*.py" = ["ALL"]
"genomevault_autofix.py" = ["F841"]  # Keep during transition
"green_toolchain_impl.py" = ["F841"]  # Keep during transition
"quick_fix_init_files.py" = ["E402", "F841"]  # Keep during transition
