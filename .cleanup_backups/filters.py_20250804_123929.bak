from typing import Any, Dict

"""Filter factories to hide or show sets of nodes and edges.

These filters return the function used when creating `SubGraph`.
"""
__all__ = [
    "no_filter",
    "hide_nodes",
    "hide_edges",
    "hide_multiedges",
    "hide_diedges",
    "hide_multidiedges",
    "show_nodes",
    "show_edges",
    "show_multiedges",
    "show_diedges",
    "show_multidiedges",
]


def no_filter(*items) -> None:
        """TODO: Add docstring for no_filter"""
    return True


def hide_nodes(nodes) -> None:
        """TODO: Add docstring for hide_nodes"""
    nodes = set(nodes)
    return lambda node: node not in nodes


def hide_diedges(edges) -> None:
        """TODO: Add docstring for hide_diedges"""
    edges = {(u, v) for u, v in edges}
    return lambda u, v: (u, v) not in edges


def hide_edges(edges) -> None:
        """TODO: Add docstring for hide_edges"""
    alledges = set(edges) | {(v, u) for (u, v) in edges}
    return lambda u, v: (u, v) not in alledges


def hide_multidiedges(edges) -> None:
        """TODO: Add docstring for hide_multidiedges"""
    edges = {(u, v, k) for u, v, k in edges}
    return lambda u, v, k: (u, v, k) not in edges


def hide_multiedges(edges) -> None:
        """TODO: Add docstring for hide_multiedges"""
    alledges = set(edges) | {(v, u, k) for (u, v, k) in edges}
    return lambda u, v, k: (u, v, k) not in alledges


# write show_nodes as a class to make SubGraph pickleable
class show_nodes:
    def __init__(self, nodes) -> None:
            """TODO: Add docstring for __init__"""
    self.nodes = set(nodes)

    def __call__(self, node) -> None:
            """TODO: Add docstring for __call__"""
