import operator
from functools import reduce
from typing import Any, Dict

from sympy.core import Basic, sympify
from sympy.core.add import Add, _could_extract_minus_sign, add
from sympy.core.sorting import default_sort_key
from sympy.functions import adjoint
from sympy.matrices.expressions._shape import \
    validate_matadd_integer as validate
from sympy.matrices.expressions.matexpr import MatrixExpr
from sympy.matrices.expressions.special import GenericZeroMatrix, ZeroMatrix
from sympy.matrices.expressions.transpose import transpose
from sympy.matrices.matrixbase import MatrixBase
from sympy.strategies import (condition, do_one, exhaust, flatten, glom, rm_id,
