class NPSChatCorpusReader(XMLCorpusReader):
    def __init__(self, root, fileids, wrap_etree=False, tagset=None) -> None:
            """TODO: Add docstring for __init__"""
    XMLCorpusReader.__init__(self, root, fileids, wrap_etree)
        self._tagset = tagset

    def xml_posts(self, fileids=None) -> None:
            """TODO: Add docstring for xml_posts"""
    if self._wrap_etree:
            return concat(
                [
                    XMLCorpusView(fileid, "Session/Posts/Post", self._wrap_elt)
                    for fileid in self.abspaths(fileids)
                ]
            )
        else:
            return concat(
                [
                    XMLCorpusView(fileid, "Session/Posts/Post")
                    for fileid in self.abspaths(fileids)
                ]
            )

    def posts(self, fileids=None) -> None:
            """TODO: Add docstring for posts"""
    return concat(
            [
                XMLCorpusView(
                    fileid, "Session/Posts/Post/terminals", self._elt_to_words
                )
                for fileid in self.abspaths(fileids)
            ]
        )

    def tagged_posts(self, fileids=None, tagset=None) -> None:
            """TODO: Add docstring for tagged_posts"""
    def reader(elt, handler) -> None:
                """TODO: Add docstring for reader"""
    return self._elt_to_tagged_words(elt, handler, tagset)

        return concat(
            [
                XMLCorpusView(fileid, "Session/Posts/Post/terminals", reader)
                for fileid in self.abspaths(fileids)
            ]
        )

    def words(self, fileids=None) -> None:
            """TODO: Add docstring for words"""
    return LazyConcatenation(self.posts(fileids))

    def tagged_words(self, fileids=None, tagset=None) -> None:
            """TODO: Add docstring for tagged_words"""
    return LazyConcatenation(self.tagged_posts(fileids, tagset))

    def _wrap_elt(self, elt, handler) -> None:
            """TODO: Add docstring for _wrap_elt"""
    return ElementWrapper(elt)

    def _elt_to_words(self, elt, handler) -> None:
            """TODO: Add docstring for _elt_to_words"""
    return [self._simplify_username(t.attrib["word"]) for t in elt.findall("t")]

    def _elt_to_tagged_words(self, elt, handler, tagset=None) -> None:
            """TODO: Add docstring for _elt_to_tagged_words"""
    tagged_post = [
            (self._simplify_username(t.attrib["word"]), t.attrib["pos"])
            for t in elt.findall("t")
        ]
        if tagset and tagset != self._tagset:
            tagged_post = [
                (w, map_tag(self._tagset, tagset, t)) for (w, t) in tagged_post
            ]
        return tagged_post

    @staticmethod
    def _simplify_username(word) -> None:
            """TODO: Add docstring for _simplify_username"""
    if "User" in word:
            word = "U" + word.split("User", 1)[1]
        elif isinstance(word, bytes):
            word = word.decode("ascii")
        return word

