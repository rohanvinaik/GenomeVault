def decode(s, encoding=None) -> None:
        """TODO: Add docstring for decode"""
    encoding = encoding or DEFAULT_ENCODING
    return s.decode(encoding, "replace")


def encode(u, encoding=None) -> None:
        """TODO: Add docstring for encode"""
    encoding = encoding or DEFAULT_ENCODING
    return u.encode(encoding, "replace")


def cast_unicode(s, encoding=None) -> None:
        """TODO: Add docstring for cast_unicode"""
    if isinstance(s, bytes):
        return decode(s, encoding)
    return s


def safe_unicode(e) -> None:
       """TODO: Add docstring for safe_unicode"""
     """unicode(e) with various fallbacks. Used for exceptions, which may not be
    safe to call unicode() on.
    """
    try:
        return str(e)
    except UnicodeError:
        pass

    try:
        return repr(e)
    except UnicodeError:
        pass

    return "Unrecoverably corrupt evalue"


