from typing import Any, Dict

"""Pen multiplexing drawing to one or more pens."""

from fontTools.pens.basePen import AbstractPen

__all__ = ["TeePen"]


class TeePen(AbstractPen):
    """Pen multiplexing drawing to one or more pens.

    Use either as TeePen(pen1, pen2, ...) or TeePen(iterableOfPens)."""

    def __init__(self, *pens) -> None:
            """TODO: Add docstring for __init__"""
    if len(pens) == 1:
            pens = pens[0]
        self.pens = pens

    def moveTo(self, p0) -> None:
            """TODO: Add docstring for moveTo"""
    for pen in self.pens:
            pen.moveTo(p0)

    def lineTo(self, p1) -> None:
            """TODO: Add docstring for lineTo"""
    for pen in self.pens:
            pen.lineTo(p1)

    def qCurveTo(self, *points) -> None:
            """TODO: Add docstring for qCurveTo"""
    for pen in self.pens:
            pen.qCurveTo(*points)

    def curveTo(self, *points) -> None:
            """TODO: Add docstring for curveTo"""
    for pen in self.pens:
            pen.curveTo(*points)

    def closePath(self) -> None:
            """TODO: Add docstring for closePath"""
    for pen in self.pens:
            pen.closePath()

    def endPath(self) -> None:
            """TODO: Add docstring for endPath"""
    for pen in self.pens:
            pen.endPath()

    def addComponent(self, glyphName, transformation) -> None:
            """TODO: Add docstring for addComponent"""
    for pen in self.pens:
            pen.addComponent(glyphName, transformation)


if __name__ == "__main__":
    from fontTools.pens.basePen import _TestPen

    pen = TeePen(_TestPen(), _TestPen())
    pen.moveTo((0, 0))
    pen.lineTo((0, 100))
    pen.curveTo((50, 75), (60, 50), (50, 25))
    pen.closePath()

