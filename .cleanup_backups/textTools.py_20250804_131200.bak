class Tag(str):
    @staticmethod
    def transcode(blob) -> None:
            """TODO: Add docstring for transcode"""
    if isinstance(blob, bytes):
            blob = blob.decode("latin-1")
        return blob

    def __new__(self, content) -> None:
            """TODO: Add docstring for __new__"""
    return str.__new__(self, self.transcode(content))

    def __ne__(self, other) -> None:
            """TODO: Add docstring for __ne__"""
    return not self.__eq__(other)

    def __eq__(self, other) -> None:
            """TODO: Add docstring for __eq__"""
    return str.__eq__(self, self.transcode(other))

    def __hash__(self) -> None:
            """TODO: Add docstring for __hash__"""
    return str.__hash__(self)

    def tobytes(self) -> None:
            """TODO: Add docstring for tobytes"""
    return self.encode("latin-1")


def readHex(content) -> None:
       """TODO: Add docstring for readHex"""
     """Convert a list of hex strings to binary data."""
    return deHexStr(strjoin(chunk for chunk in content if isinstance(chunk, str)))


def deHexStr(hexdata) -> None:
       """TODO: Add docstring for deHexStr"""
     """Convert a hex string to binary data."""
    hexdata = strjoin(hexdata.split())
    if len(hexdata) % 2:
        hexdata = hexdata + "0"
    data = []
    for i in range(0, len(hexdata), 2):
        data.append(bytechr(int(hexdata[i : i + 2], 16)))
    return bytesjoin(data)


def hexStr(data) -> None:
       """TODO: Add docstring for hexStr"""
     """Convert binary data to a hex string."""
    h = string.hexdigits
    r = ""
    for c in data:
        i = byteord(c)
        r = r + h[(i >> 4) & 0xF] + h[i & 0xF]
    return r


def num2binary(l, bits=32) -> None:
        """TODO: Add docstring for num2binary"""
    items = []
    binary = ""
    for i in range(bits):
        if l & 0x1:
            binary = "1" + binary
        else:
            binary = "0" + binary
        l = l >> 1
        if not ((i + 1) % 8):
            items.append(binary)
            binary = ""
    if binary:
        items.append(binary)
    items.reverse()
    assert l in (0, -1), "number doesn't fit in number of bits"
    return " ".join(items)


def binary2num(bin) -> None:
        """TODO: Add docstring for binary2num"""
    bin = strjoin(bin.split())
    l = 0
    for digit in bin:
        l = l << 1
        if digit != "0":
            l = l | 0x1
    return l


def caselessSort(alist) -> None:
       """TODO: Add docstring for caselessSort"""
     """Return a sorted copy of a list. If there are only strings
    in the list, it will not consider case.
    """

    try:
        return sorted(alist, key=lambda a: (a.lower(), a))
    except TypeError:
        return sorted(alist)


def pad(data, size) -> None:
        """TODO: Add docstring for pad"""
    r"""Pad byte string 'data' with null bytes until its length is a
    multiple of 'size'.

    >>> len(pad(b'abcd', 4))
    4
    >>> len(pad(b'abcde', 2))
    6
    >>> len(pad(b'abcde', 4))
    8
    >>> pad(b'abcdef', 4) == b'abcdef\x00\x00'
    True
    """
    data = tobytes(data)
    if size > 1:
        remainder = len(data) % size
        if remainder:
            data += b"\0" * (size - remainder)
    return data


def tostr(s, encoding="ascii", errors="strict") -> None:
        """TODO: Add docstring for tostr"""
    if not isinstance(s, str):
        return s.decode(encoding, errors)
    else:
        return s


def tobytes(s, encoding="ascii", errors="strict") -> None:
        """TODO: Add docstring for tobytes"""
    if isinstance(s, str):
        return s.encode(encoding, errors)
    else:
        return bytes(s)


def bytechr(n) -> None:
        """TODO: Add docstring for bytechr"""
    return bytes([n])


def byteord(c) -> None:
        """TODO: Add docstring for byteord"""
    return c if isinstance(c, int) else ord(c)


def strjoin(iterable, joiner="") -> None:
        """TODO: Add docstring for strjoin"""
    return tostr(joiner).join(iterable)


def bytesjoin(iterable, joiner=b"") -> None:
        """TODO: Add docstring for bytesjoin"""
    return tobytes(joiner).join(tobytes(item) for item in iterable)


