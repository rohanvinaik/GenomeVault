# GenomeVault Environment Configuration

# Node Configuration
NODE_TYPE=light  # Options: light, full, archive
SIGNATORY_STATUS=false  # Set to true if you're a trusted signatory
NODE_CLASS_WEIGHT=1  # 1 for light, 4 for full, 8 for archive

# Network Configuration
PIR_SERVERS=localhost:9001,localhost:9002,localhost:9003
BLOCKCHAIN_RPC=http://localhost:8545
IPFS_API=http://localhost:5001

# Security Configuration
REDIS_PASSWORD=change_this_in_production
JWT_SECRET=change_this_in_production
ENCRYPTION_KEY=change_this_in_production

# HIPAA Configuration (for healthcare providers)
NPI_NUMBER=
BAA_HASH=
RISK_ANALYSIS_HASH=
HSM_SERIAL=

# Trusted Signatory Keys (for development only)
TS_KEY_1=dev_ts_key_1
TS_KEY_2=dev_ts_key_2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Processing Configuration
MAX_GENOME_SIZE=3GB
COMPRESSION_TIER=clinical  # Options: mini, clinical, full
ENABLE_GPU=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost/genomevault

# Clinical Features
ENABLE_DIABETES_PILOT=false
ENABLE_PHARMACOGENOMICS=false
ENABLE_TRIAL_MATCHING=false
