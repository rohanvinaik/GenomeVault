# GenomeVault Environment Configuration
# Copy this file to .env and modify values as needed

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Global log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
GENOMEVAULT_LOG_LEVEL=INFO

# Log directory (relative to project root or absolute path)
GENOMEVAULT_LOG_DIR=logs

# Component-specific log levels (optional)
# These override the global log level for specific components
GENOMEVAULT_HYPERVECTOR_LOG_LEVEL=INFO
GENOMEVAULT_ZK_PROOFS_LOG_LEVEL=WARNING
GENOMEVAULT_PIR_LOG_LEVEL=INFO
GENOMEVAULT_FEDERATED_LOG_LEVEL=INFO
GENOMEVAULT_BLOCKCHAIN_LOG_LEVEL=INFO
GENOMEVAULT_API_LOG_LEVEL=INFO

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
GENOMEVAULT_ENV=development

# API configuration
GENOMEVAULT_API_HOST=0.0.0.0
API_PORT=8000
GENOMEVAULT_API_DEBUG=true

# Rate limiting
RATE_LIMIT_RPS=5.0
RATE_LIMIT_BURST=10

# Security settings
GENOMEVAULT_SECRET_KEY=your-secret-key-here
GENOMEVAULT_SECURITY_LEVEL=128

# Database configuration
GENOMEVAULT_DATABASE_URL=postgresql://localhost/genomevault
GENOMEVAULT_DATABASE_POOL_SIZE=10

# Redis configuration (for caching and job queues)
GENOMEVAULT_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# HYPERVECTOR CONFIGURATION
# =============================================================================

# Default hypervector dimension
GENOMEVAULT_HV_DIMENSION=10000

# Compression settings
GENOMEVAULT_COMPRESSION_TIER=clinical
GENOMEVAULT_MAX_VARIANTS=1000

# =============================================================================
# ZERO-KNOWLEDGE PROOFS CONFIGURATION
# =============================================================================

# ZK proof settings
GENOMEVAULT_ZK_CIRCUIT_SIZE=1024
GENOMEVAULT_ZK_SECURITY_LEVEL=128
GENOMEVAULT_ZK_VERIFICATION_TIMEOUT=30.0

# =============================================================================
# FEDERATED LEARNING CONFIGURATION
# =============================================================================

# Federated learning settings
GENOMEVAULT_FL_MAX_PARTICIPANTS=10
GENOMEVAULT_FL_MIN_PARTICIPANTS=3
GENOMEVAULT_FL_ROUNDS=100

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Blockchain network settings
GENOMEVAULT_BLOCKCHAIN_NETWORK=testnet
GENOMEVAULT_BLOCKCHAIN_RPC_URL=http://localhost:8545
GENOMEVAULT_BLOCKCHAIN_PRIVATE_KEY=your-private-key-here

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics collection
GENOMEVAULT_ENABLE_METRICS=true
GENOMEVAULT_METRICS_PORT=9090

# Tracing
GENOMEVAULT_ENABLE_TRACING=false
GENOMEVAULT_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Health check settings
GENOMEVAULT_HEALTH_CHECK_INTERVAL=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Worker settings
GENOMEVAULT_WORKERS=4
GENOMEVAULT_MAX_QUEUE_SIZE=1000

# Cache settings
GENOMEVAULT_CACHE_TTL=3600
GENOMEVAULT_CACHE_MAX_SIZE=1000

# GPU settings (if available)
GENOMEVAULT_USE_GPU=false
GENOMEVAULT_GPU_DEVICE=0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
GENOMEVAULT_DEBUG=false
GENOMEVAULT_RELOAD=false
GENOMEVAULT_PROFILING=false

# Test settings
GENOMEVAULT_TEST_DATABASE_URL=postgresql://localhost/genomevault_test
GENOMEVAULT_TEST_PARALLEL=true
